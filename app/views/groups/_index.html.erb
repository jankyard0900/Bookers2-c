<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_image, size: '50x50' %></td>
        <td><%= link_to group.name, group_path(group.id) %></td>
        <td><%= group.introduction %></td>
        <td></td>
        <% if group.is_owned_by?(current_user) %>
          <td><%= link_to 'Edit', edit_group_path(group), class: "group_#{group.id}" %></td>
        <% elsif group.users.include?(current_user) %>
          <td><%= link_to 'Leave this group', group_path(group), method: :delete, class: 'btn btn-sm btn-danger' %></td>
        <% else %>
          <td><%= link_to 'Join this group', group_join_path(group), class: 'btn btn-sm btn-success' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>